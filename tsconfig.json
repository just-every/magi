{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": [
        "./controller/node_modules/@types",
        "./common/shared-types",
        "./node_modules/@types"
    ],
    "baseUrl": "./",
        "paths": {
            "@types": ["./common/shared-types"],
            "common/*": ["common/*"]
        }
    },
    "include": [
        "ensemble/**/*",
        "magi/**/*",
        "controller/**/*",
        "browser/**/*",
        "common/**/*",
        "setup/**/*",
        "test/**/*",
        "templates/**/*"
    ],
    "exclude": ["controller/node_modules", "controller/dist"],
    "files": [
        "test/tools/tool-types.d.ts"
    ]
}
