{
    "name": "magi-system",
    "version": "1.0.0",
    "description": "MAGI System",
    "type": "module",
    "scripts": {
        "postinstall": "cd controller && npm install && cd ../magi && npm install",
        "build": "npm run build:host && npm run build:docker",
        "build:ci": "npm run build:host && cd controller && npm run build && cd ../magi && npm run build",
        "build:docker": "docker compose build controller magi-base",
        "build:host": "npx tsc -p host",
        "dev": "npm run build:host && npm run browser:start && npm run build:docker && docker compose up",
        "browser:start": "node host/dist/browser/browser-control.js start",
        "browser:kill": "node host/dist/browser/browser-control.js kill",
        "browser:status": "node host/dist/browser/browser-control.js status",
        "browser:toggle": "node host/dist/browser/browser-control.js toggle",
        "browser:clone-profile": "node host/dist/browser/browser-control.js clone-profile",
        "browser:test-connection": "node host/dist/browser/test-cdp-connection.js",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint 'controller/src/**/*.{ts,tsx}' 'magi/src/**/*.{ts,tsx}' 'host/**/*.{ts,tsx}' 'ensemble/**/*.ts'",
        "lint:fix": "eslint 'controller/src/**/*.{ts,tsx}' 'magi/src/**/*.{ts,tsx}' 'host/**/*.{ts,tsx}' 'ensemble/**/*.ts' --fix",
        "setup": "node host/setup.js",
        "setup:claude": "node host/dist/setup/claude_setup.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "cd test/playwright && npx playwright test",
        "test:e2e:ui": "cd test/playwright && npx playwright test --ui",
        "test:e2e:install": "cd test/playwright && npm install && npx playwright install",
        "test:tool": "test/run-tool-docker.sh",
        "test:tools": "test/run-all-tools.sh",
        "test:js-tools": "test/run-js-tools.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/has-context/magi-system.git"
    },
    "overrides": {
        "tar-fs": "^2.1.2"
    },
    "devDependencies": {
        "@eslint/js": "^8.56.0",
        "@types/node": "^22.14.0",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^3.1.1",
        "@vitest/ui": "^3.1.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "jsdom": "^26.0.0",
        "node-pg-migrate": "^7.9.1",
        "prettier": "^3.5.3",
        "prettier-plugin-sh": "^0.17.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^7.0.0",
        "vitest": "^3.1.1"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.51.0",
        "@google/genai": "^0.12.0",
        "@types/pg": "^8.11.14",
        "canvas": "^3.1.0",
        "chrome-launcher": "^1.1.2",
        "chrome-remote-interface": "^0.33.3",
        "dotenv": "^16.5.0",
        "esbuild": "^0.25.4",
        "pg": "^8.15.6",
        "proper-lockfile": "^4.1.2",
        "simple-git": "^3.27.0",
        "ws": "^8.18.1"
    }
}
