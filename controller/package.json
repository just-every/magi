{
    "name": "magi-controller",
    "version": "1.0.0",
    "description": "MAGI Controller",
    "main": "index.js",
    "scripts": {
        "cleanup": "rm -rf dist/",
        "build": "tsc && webpack && rsync -a src/client/html dist/client/ && rsync -a src/client/img dist/client/",
        "build:docker": "tsc --outDir /app/dist && webpack && rsync -a src/client/html /app/dist/app/src/client/ && rsync -a src/client/img /app/dist/app/src/client/",
        "start": "node dist/controller/src/server/server.js",
        "start:docker": "npm run build:docker && node /app/dist/server/server.js",
        "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Webpack,Server\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:webpack\" \"npm run watch:server\"",
        "watch:ts": "tsc --watch",
        "watch:webpack": "webpack --watch",
        "watch:server": "nodemon --watch dist --watch ../common --delay 2 dist/controller/src/server/server.js",
        "build:initial": "npm run build && rsync -a src/client/html dist/client/ && rsync -a src/client/img dist/client/",
        "lint": "eslint --ext .ts,.tsx src/",
        "lint:fix": "eslint --ext .ts,.tsx src/ --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/just-every/magi.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/just-every/magi/issues"
    },
    "homepage": "https://github.com/just-every/magi#readme",
    "dependencies": {
        "@just-every/ensemble": "^0.2.16",
        "@just-every/task": "^0.2.4",
        "@types/bootstrap": "^5.2.10",
        "@types/pg": "^8.15.2",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/xterm": "^5.5.0",
        "bootstrap": "^5.3.6",
        "bootstrap-icons": "^1.13.1",
        "child_process": "^1.0.2",
        "chrome-remote-interface": "^0.33.3",
        "config": "^3.3.12",
        "dockerode": "^4.0.6",
        "dotenv": "^16.5.0",
        "ef-infinite-canvas": "^0.6.8",
        "express": "^4.21.2",
        "marked": "^15.0.12",
        "micromatch": "^4.0.8",
        "node-telegram-bot-api": "^0.66.0",
        "openai": "^4.104.0",
        "pg": "^8.16.0",
        "proper-lockfile": "^4.1.2",
